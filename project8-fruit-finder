import random

player_fund = 1.0

cherry = "ğŸ’"
bell = "ğŸ””"
lemon = "ğŸ‹"
orange = "ğŸŠ"
star = "â­"
skull = "ğŸ’€"

symbols = [cherry, bell, lemon, orange, star, skull]

symbol_1 = random.choice(symbols)
symbol_2 = random.choice(symbols)
